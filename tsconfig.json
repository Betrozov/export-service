{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": false,
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true
  },
  "typeRoots": [
    "../node_modules/@types",
    "typings/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
